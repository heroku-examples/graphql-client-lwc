{
    "name": "graphql-client-lwc",
    "description": "LWC App with Apollo GraphQL Client",
    "version": "0.0.1",
    "author": "Juli√°n Duque <jduque@salesforce.com>",
    "bugs": "https://github.com/Julian Duque/graphql-client-lwc/issues",
    "dependencies": {
        "@hapi/joi": "^17.1.1",
        "@lwc/synthetic-shadow": "^1.6.2",
        "apollo-boost": "^0.4.9",
        "compression": "^1.7.4",
        "express": "^4.17.1",
        "graphql": "^15.0.0",
        "helmet": "^3.22.0"
    },
    "devDependencies": {
        "eslint": "^7.0.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.4",
        "lwc-services": "^2.0.7",
        "prettier": "^2.0.5"
    },
    "engines": {
        "node": ">=10.13.0",
        "npm": ">=6.4.1",
        "yarn": ">=1.9.4"
    },
    "homepage": "https://github.com/heroku-examples/graphql-client-lwc",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "keywords": [
        "lwc"
    ],
    "license": "MIT",
    "lint-staged": {
        "**/*.{css,html,js,json,md,ts,yaml,yml}": [
            "prettier --write"
        ],
        "./src/**/*.js": [
            "eslint"
        ]
    },
    "repository": "heroku-examples/graphql-client-lwc",
    "scripts": {
        "build": "lwc-services build -m production",
        "build:development": "lwc-services build",
        "lint": "eslint ./src/**/*.js",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "serve": "node scripts/server.js",
        "test:unit": "lwc-services test:unit",
        "test:unit:coverage": "lwc-services test:unit --coverage",
        "test:unit:debug": "lwc-services test:unit --debug",
        "test:unit:watch": "lwc-services test:unit --watch",
        "watch": "lwc-services watch"
    }
}
